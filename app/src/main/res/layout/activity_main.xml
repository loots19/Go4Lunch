<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/restaurant"
        android:alpha="0.7"/>


    <!-- MAIN CONTAINER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--IMAGE ICON BOWL-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_top_margin"
            android:background="@drawable/ic_hot_food_in_a_bowl" />

        <!--TITTLE-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tittle_name_first_screen"
            android:textSize="@dimen/default_tittle_size_first_screen"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <!--TITTLE_SENTENCE-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tittle_sentence_name_first_screen"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/default_tittle_sentence_first_screen"/>


</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>